<commands>
    <command name="count" comment="Do, well, counting."/>

    <command name="voicestat" comment="Get statistics on voice chat activity">
        <command name="me" comment="Voice stats about yourself">
            <arg name="channel" comment="What channel to get statistics of" type="channel" required="false"/>
        </command>
    </command>

    <category name="image">
        <command name="filter" comment="Apply a filter to an image or animated GIF">
            <arg name="filter" comment="Which filter to apply" type="string" required="true">
                <choice>blur</choice>
                <choice>bump</choice>
                <choice>chrome</choice>
                <choice>crystallize</choice>
                <choice>dither</choice>
                <choice>edge</choice>
                <choice>emboss</choice>
                <choice>glow</choice>
                <choice>gotham</choice>
                <choice>grayscale</choice>
                <choice>hsb</choice>
                <choice>invert</choice>
                <choice>kaleidoscope</choice>
                <choice>nashville</choice>
                <choice>offset</choice>
                <choice>old</choice>
                <choice>pixelate</choice>
                <choice>prewitt</choice>
                <choice>roberts</choice>
                <choice>rylanders</choice>
            </arg>
            <arg name="strength" comment="If applicable, the strength of the filter" type="string" required="false">
                <choice>weak</choice>
                <choice>normal</choice>
                <choice>strong</choice>
                <choice>overkill</choice>
            </arg>
        </command>
        <command name="scaleimage" comment="Rescales an image">
            <arg name="factor" type="integer" required="true" comment="The factor by which to scale by. Must be between 0% and 500%."/>
        </command>
    </category>

    <category name="economy">
        <command name="claim" comment="Claim your daily coins"/>
    </category>
</commands>